<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "airbnboatlogo2.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active louermonbateau">
        <%= link_to "Louer mon bateau", new_boat_path, class: "nav-link" %>
      </li>
      <li class="nav-item louermonbateau">
        <% if user_signed_in? %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: "delete", class: "nav-link" %>
        <% else %>
            <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= link_to dashboard_path do %>
          <%= image_tag "https://res.cloudinary.com/dpwr92z8p/image/upload/v1591352568/woman_u4gpox.jpg", class: "avatar dropdown-toggle avatar-large" %>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <%= simple_form_for(@boat) do |f| %>
    <%= f.input :name, :placeholder => "Black Pearl, moteur, 9 pieds", :label => "Nom de votre bateau" %>
    <%= f.input :description, :placeholder => "Bateau à moteur, capacité jusqu'à 5 personnes, libre tous les week-ends ..." %>
    <%= f.input :location, :placeholder => "Marseille", :label => "Ville" %>
    <%= f.input :price_per_day, :placeholder => "150€", :label => "Prix à la journée" %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Retour", dashboard_path, class: "btn btn-primary" %>
</div>

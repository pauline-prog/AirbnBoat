
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "airbnboatlogo2.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Louer mon bateau", "#", class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Se connecter", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Mon profil", "#", class: "dropdown-item" %>
          <%= link_to "Mes bateaux", "#", class: "dropdown-item" %>
          <%= link_to "Mes réservations", "#", class: "dropdown-item" %>
          <%= link_to "Notifications", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="bannerindex">
  <div class="container2">
    <form>
      <div class="form-row">
        <div class="form-group col-md-6">
          <input type="text" class="form-control border-light" placeholder="Ville de départ">
        </div>
        <div class="form-group col-md-1">
          <input type="text" class="form-control border-light" placeholder="Du">
        </div>
        <div class="form-group col-md-1">
          <input type="text" class="form-control border-light" placeholder="Au">
        </div>
        <div class="form-group col-md-3">
          <select type="text" class="form-control border-light" placeholder="Type de bateau">
            <option selected>Type de bateau</option>
            <option selected>Voilier</option>
            <option selected>Bateau à moteur</option>
            <option selected>Catamaran</option>
            <option selected>Semi-rigide</option>
            <option selected>Péniche</option>
            <option selected>Yacht</option>
          </select>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="content">
  <div class="card-style">

    <div class="card-header-body border-light">
      <div class="card-header">Avec ou sans capitaine</div>
      <div class="card-body">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck21">
          <label class="custom-control-label" for="customCheck21"> Avec capitaine</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck22">
          <label class="custom-control-label" for="customCheck22"> Sans capitaine</label>
        </div>
      </div>
    </div>

    <div class="card-header-body border-light">
      <div class="card-header">Type de bateau</div>
      <div class="card-body">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck1">
          <label class="custom-control-label" for="customCheck1"> Voilier</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck2">
          <label class="custom-control-label" for="customCheck2"> Bateau à moteur</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck3">
          <label class="custom-control-label" for="customCheck3"> Catamaran</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck4">
          <label class="custom-control-label" for="customCheck4"> Semi-rigide</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck5">
          <label class="custom-control-label" for="customCheck5"> Péniche</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck6">
          <label class="custom-control-label" for="customCheck6"> Yacht</label>
        </div>
      </div>
    </div>

    <div class="card-header-body border-light">
      <div class="card-header">Prix</div>
      <div class="card-body">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck7">
          <label class="custom-control-label" for="customCheck7"> Moins de 50 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck8">
          <label class="custom-control-label" for="customCheck8"> 50 - 100 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck9">
          <label class="custom-control-label" for="customCheck9"> 100 - 200 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck10">
          <label class="custom-control-label" for="customCheck10"> 200 - 300 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck11">
          <label class="custom-control-label" for="customCheck11"> 300 - 400 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck12">
          <label class="custom-control-label" for="customCheck12"> 400 - 500 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck13">
          <label class="custom-control-label" for="customCheck13"> 500 - 700 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck14">
          <label class="custom-control-label" for="customCheck14"> 700 - 1000 €</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck15">
          <label class="custom-control-label" for="customCheck15"> Plus de 1000 €</label>
        </div>
      </div>
    </div>

    <div class="card-header-body border-light">
      <div class="card-header">Longueur</div>
      <div class="card-body">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck16">
          <label class="custom-control-label" for="customCheck16"> Moins de 5 m</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck17">
          <label class="custom-control-label" for="customCheck17"> 5 - 10 m</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck18">
          <label class="custom-control-label" for="customCheck18"> 10 - 20 m</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck19">
          <label class="custom-control-label" for="customCheck19"> 20 - 30 m</label>
        </div>
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="customCheck20">
          <label class="custom-control-label" for="customCheck20"> Plus de 30 m</label>
        </div>
      </div>
    </div>

    <img id="map" src='https://raw.githubusercontent.com/lewagon/layouts-demo/gh-pages/images/mapbox.png' width="250">
  </div>

  <div class="announces">
    <% @boats.each do |boat| %>
      <div class="announce">
        <img src="assets/annonce1.png" class="img-rounded">
        <div class="announce-info">
          <div>
            <h2><%= link_to boat.name, boat_path(boat.id) %></h2>
            <p><%= boat.location %></p>
          </div>
          <h2 class="announce-pricing"><%= boat.price_per_day %> €</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>


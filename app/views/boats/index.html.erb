
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "airbnboatlogo2.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Louer mon bateau", "#", class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Se connecter", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Mon profil", "#", class: "dropdown-item" %>
          <%= link_to "Mes bateaux", "#", class: "dropdown-item" %>
          <%= link_to "Mes réservations", "#", class: "dropdown-item" %>
          <%= link_to "Notifications", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: url(assets/skyview1bis.jpg);">
  <div class="container">
    <form>
      <div class="form-row search">
        <div class="col">
          <input type="icon-location-pin" id="mylocation" class="form-control" placeholder='Marseille, Corse, Bretagne...'>
        </div>
        <div class="col">
          <input type="icon-time-calendar" id="Start_date" class="form-control" placeholder='Début'>
        </div>
        <div class="col">
          <input type="icon-time-calendar" id="End_date" class="form-control" placeholder='Fin'>
        </div>
        <div class="col">
          <input type="icon-transport-boat" id="Bateau_type" class="form-control" placeholder='Type de bateau'>
        </div>
        <button type="submit" class="btn" id='rechercher'>Rechercher</button>
      </div>
    </form>
  </div>
</div>

















<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at home
  </div>
</div>

<% @boats.each do |boat| %>
  <div class="card">
  	<% if boat.photo.attached? %>
  	  <%= cl_image_tag boat.photo.key, height: 300, width: 400, crop: :fill %>
  	<% end %>
  	<p><%= link_to boat.name, boat_path(boat.id) %></p>
  </div>
<% end %>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "airbnboatlogo2.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active louermonbateau">
        <%= link_to "Louer mon bateau", new_boat_path, class: "nav-link" %>
      </li>
        <% if user_signed_in? %>
            <%= link_to "Se déconnecter", destroy_user_session_path, method: "delete", class: "nav-link" %>
        <% else %>
            <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "/assets/woman.jpg", class: "avatar dropdown-toggle avatar-large", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Mon profil", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Mes bateaux", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Mes réservations", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Notifications", dashboard_path, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <%= simple_form_for(@boat) do |f| %>
    <%= f.input :name, :placeholder => "Black Pearl", :label => "Nom de votre bateau" %>
    <%= f.input :description, :placeholder => "Bateau à moteur, capacité jusqu'à 5 personnes, libre tous les week-ends ..." %>
    <%= f.input :location, :placeholder => "Marseille", :label => "Ville" %>
    <%= f.input :price_per_day, :placeholder => "150€", :label => "Prix à la journée" %>
    <%= label_tag :captain, "Capitaine à bord ?" %>
    <%= f.check_box :captain %>
    <%= f.input :category, :placeholder => "Bateau à moteur", :label => "Type de bateau" %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "Retour", dashboard_path, class: "btn btn-primary" %>
</div>
